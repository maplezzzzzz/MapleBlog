---
export interface Props {
  type?: 'article' | 'card' | 'list' | 'text' | 'page';
  className?: string;
}

const { type = 'card', className = '' } = Astro.props;
---

{type === 'card' && (
  <div class={`animate-pulse rounded-xl overflow-hidden ${className}`}>
    <div class="bg-gray-200 dark:bg-gray-700 aspect-video w-full"></div>
    <div class="p-4">
      <div class="h-6 bg-gray-200 dark:bg-gray-700 rounded w-3/4 mb-3"></div>
      <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-full mb-2"></div>
      <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-5/6 mb-2"></div>
      <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-1/2"></div>
    </div>
  </div>
)}

{type === 'article' && (
  <div class={`animate-pulse ${className}`}>
    <div class="h-8 bg-gray-200 dark:bg-gray-700 rounded w-1/2 mb-6"></div>
    <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-full mb-4"></div>
    <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-full mb-4"></div>
    <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-3/4 mb-4"></div>
    <div class="flex items-center gap-4 my-6">
      <div class="h-10 w-10 rounded-full bg-gray-200 dark:bg-gray-700"></div>
      <div class="flex-1">
        <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-1/3"></div>
      </div>
    </div>
    <div class="space-y-4">
      <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-full"></div>
      <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-5/6"></div>
      <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-full"></div>
      <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-4/6"></div>
      <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-full"></div>
      <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-5/6"></div>
    </div>
  </div>
)}

{type === 'list' && (
  <div class={`animate-pulse space-y-4 ${className}`}>
    {[...Array(5)].map(() => (
      <div class="flex gap-4">
        <div class="h-16 w-16 rounded-lg bg-gray-200 dark:bg-gray-700"></div>
        <div class="flex-1 space-y-2">
          <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-3/4"></div>
          <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded w-full"></div>
          <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded w-2/3"></div>
        </div>
      </div>
    ))}
  </div>
)}

{type === 'text' && (
  <div class={`animate-pulse space-y-2 ${className}`}>
    <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-full"></div>
    <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-5/6"></div>
    <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-4/6"></div>
    <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-5/6"></div>
    <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-3/6"></div>
  </div>
)}

{type === 'page' && (
  <div class={`animate-pulse p-4 ${className}`}>
    <div class="h-12 bg-gray-200 dark:bg-gray-700 rounded w-1/3 mb-8"></div>
    <div class="h-6 bg-gray-200 dark:bg-gray-700 rounded w-1/4 mb-6"></div>
    <div class="space-y-4">
      <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-full"></div>
      <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-5/6"></div>
      <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-4/6"></div>
      <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-5/6"></div>
      <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-3/6"></div>
    </div>
  </div>
)}