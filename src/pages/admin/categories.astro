  <script>
    const modal = document.getElementById('category-modal');
    const form = document.getElementById('category-form');
    
    window.openModal = () => {
        document.getElementById('modal-title').textContent = 'æ–°å»ºåˆ†ç±»';
        form.reset();
        document.getElementById('cat-id').value = '';
        document.getElementById('cat-slug').disabled = false;
        modal.classList.remove('hidden');
    };
    
    window.closeModal = () => {
        modal.classList.add('hidden');
    };
    
    window.editCategory = (id, title, desc, color, icon) => {
        document.getElementById('modal-title').textContent = 'ç¼–è¾‘åˆ†ç±»';
        document.getElementById('cat-id').value = id;
        document.getElementById('cat-title').value = title;
        // slug ä» id è·å– (å»é™¤ .md)
        const slug = id.replace(/\.(md|mdx)$/, '');
        const slugInput = document.getElementById('cat-slug');
        slugInput.value = slug;
        slugInput.disabled = true; // ç¼–è¾‘æ—¶ä¸å…è®¸ä¿®æ”¹æ–‡ä»¶å
        
        document.getElementById('cat-desc').value = desc;
        document.getElementById('cat-color').value = color;
        document.getElementById('cat-icon').value = icon;
        
        modal.classList.remove('hidden');
    };
    
    window.deleteCategory = async (id) => {
        if(!confirm(`ç¡®å®šåˆ é™¤åˆ†ç±» "${id}" å—ï¼Ÿè¿™å°†ç‰©ç†åˆ é™¤å¯¹åº”çš„æ–‡ä»¶ã€‚`)) return;
        
        try {
            const res = await fetch('/api/categories', {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id })
            });
            if(res.ok) {
                window.showToast('åˆ é™¤æˆåŠŸ', 'success');
                setTimeout(() => window.location.reload(), 1000);
            } else {
                window.showToast('åˆ é™¤å¤±è´¥', 'error');
            }
        } catch(e) {
            window.showToast('å‡ºé”™: ' + e.message, 'error');
        }
    };
    
    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const formData = new FormData(form);
        const data = Object.fromEntries(formData);
        const isEdit = !!data.id;
        
        try {
            const res = await fetch('/api/categories', {
                method: isEdit ? 'PUT' : 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });
            
            const result = await res.json();
            
            if(res.ok) {
                window.showToast(isEdit ? 'åˆ†ç±»å·²æ›´æ–°' : 'åˆ†ç±»å·²åˆ›å»º', 'success');
                closeModal();
                setTimeout(() => window.location.reload(), 1000);
            } else {
                window.showToast('ä¿å­˜å¤±è´¥: ' + result.error, 'error');
            }
        } catch(e) {
            window.showToast('å‡ºé”™: ' + e.message, 'error');
        }
    });
  </script>

  <style>
    .categories-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
    }
    
    .category-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        padding: 20px;
        border-left: 4px solid #ccc;
        transition: transform 0.2s;
    }
    
    .category-card:hover { transform: translateY(-2px); }
    
    .card-header {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 10px;
    }
    
    .cat-icon { font-size: 1.5rem; }
    .card-header h3 { margin: 0; font-size: 1.1rem; color: #2c3e50; }
    
    .desc {
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 15px;
        height: 2.7rem;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }
    
    .meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.8rem;
        color: #adb5bd;
        margin-bottom: 15px;
        background: #f8f9fa;
        padding: 4px 8px;
        border-radius: 4px;
    }
    
    .color-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }
    
    .card-actions {
        display: flex;
        gap: 10px;
    }
    
    .action-btn {
        flex: 1;
        padding: 6px;
        border: 1px solid #dee2e6;
        background: white;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.9rem;
        transition: all 0.2s;
    }
    
    .action-btn.edit:hover { background: #e3f2fd; color: #3498db; border-color: #3498db; }
    .action-btn.delete:hover { background: #ffebee; color: #e74c3c; border-color: #e74c3c; }

    /* Modal */
    .modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }
    .modal.hidden { display: none; }
    
    .modal-content {
        background: white;
        padding: 30px;
        border-radius: 8px;
        width: 90%;
        max-width: 500px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.15);
    }
    
    .modal-content h3 { margin-top: 0; margin-bottom: 20px; }
    
    .form-group { margin-bottom: 15px; }
    .form-group label { display: block; margin-bottom: 5px; font-weight: 500; }
    .form-input { width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; }
    
    .form-row { display: flex; gap: 15px; }
    .half { flex: 1; }
    
    .modal-actions {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 25px;
    }
  </style>
</Layout>