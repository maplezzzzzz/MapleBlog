</div>

<style>
  .tab-content {
    display: block;
  }

  .hidden {
    display: none;
  }

  .tab-button {
    position: relative;
    overflow: hidden;
  }

  .tab-button.active {
    background-color: rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .dark .tab-button.active {
    background-color: rgba(31, 41, 55, 0.3);
  }
</style>

<script>
  // 默认显示照片标签
  document.addEventListener('DOMContentLoaded', function() {
    document.getElementById('photos').classList.remove('hidden');
    document.getElementById('video-tab').classList.remove('active');
    document.getElementById('photo-tab').classList.add('active');
  });

  function switchTab(contentId, tabId) {
    // 隐藏所有内容区
    document.querySelectorAll('.tab-content').forEach(content => {
      content.classList.add('hidden');
    });
    
    // 移除所有标签的激活状态
    document.querySelectorAll('.tab-button').forEach(tab => {
      tab.classList.remove('active');
    });
    
    // 显示选中的内容区
    document.getElementById(contentId).classList.remove('hidden');
    
    // 激活选中的标签
    document.getElementById(tabId).classList.add('active');
  }
  
  function openPhotoModal(src, title, desc) {
    const modal = document.getElementById('photo-modal');
    const modalImg = document.getElementById('modal-img');
    const modalCaption = document.getElementById('modal-caption');
    
    modalImg.src = src;
    modalCaption.innerHTML = `<div><h3 class="font-bold">${title}</h3><p class="text-sm">${desc}</p></div>`;
    modal.classList.remove('hidden');
    modal.classList.add('flex');
    
    document.body.style.overflow = 'hidden'; // 防止背景滚动
  }
  
  function closePhotoModal() {
    const modal = document.getElementById('photo-modal');
    modal.classList.add('hidden');
    modal.classList.remove('flex');
    document.body.style.overflow = 'auto'; // 恢复背景滚动
  }
  
  // 点击模态框背景关闭
  document.getElementById('photo-modal').addEventListener('click', function(e) {
    if (e.target === this) {
      closePhotoModal();
    }
  });
  
  // 按ESC键关闭
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      closePhotoModal();
    }
  });
</script>